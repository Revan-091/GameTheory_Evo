import matplotlib.pyplot as plt
import csv

def plot_deaths_per_step(deaths_per_step_file):
    steps = []
    deaths_A = []
    deaths_B = []

    with open(deaths_per_step_file, 'r') as file:
        reader = csv.reader(file)
        for row in reader:
            steps.append(int(row[0]))
            deaths_A.append(int(row[1]))
            deaths_B.append(int(row[2]))

    plt.plot(steps, deaths_A, label='Team A')
    plt.plot(steps, deaths_B, label='Team B')
    plt.xlabel('Step')
    plt.ylabel('Total Deaths')
    plt.title('Deaths per Step per Team')
    plt.legend()
    plt.grid(True)
    plt.show()

if __name__ == "__main__":
    deaths_per_step_file = 'deaths_per_step.csv'
    plot_deaths_per_step(deaths_per_step_file)
